<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/r_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:hint="Enter Your Name"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/r_emailid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Email Id"
        android:layout_below="@+id/r_name"
        android:layout_marginTop="15dp"
        android:inputType="textEmailAddress"
        />



    <EditText
        android:id="@+id/r_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:layout_below="@+id/r_phone"
        android:layout_marginTop="15dp"

        />

    <Button
        android:id="@+id/register_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTER USER"
        android:layout_below="@+id/r_password"
        android:layout_marginTop="25dp"
        android:background="@color/green"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/r_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r_emailid"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="enter phone number"
        android:inputType="phone" />

    <Button
        android:id="@+id/goToLoginActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already User ? LogIn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_btn1"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:background="@color/green"/>

    />
</RelativeLayout>